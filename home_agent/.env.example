# Jarvis Home Agent Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Token (get from @BotFather on Telegram)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Optional: Pre-authorize a specific Telegram user ID
# If not set, the first user to /start becomes the owner
AUTHORIZED_USER_ID=

# Ollama Configuration (for AI interpretation)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Kali VM SSH Configuration
# Run in Kali: sudo systemctl start ssh && ip a
KALI_HOST=
KALI_USER=kali
KALI_PASSWORD=
KALI_PORT=22

# Cursor IDE Path (Windows)
CURSOR_PATH=C:\Users\Ilja\AppData\Local\Programs\cursor\Cursor.exe

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Debug mode
DEBUG=false
